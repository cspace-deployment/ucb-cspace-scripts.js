{
  "name": "ucb-cspace-scripts",
  "version": "0.0.1",
  "description": "UC Berkeley CollectionSpace scripts",
  "author": "Ray Lee <rhlee@berkeley.edu>",
  "license": "ECL-2.0",
  "keywords": [
    "collectionspace",
    "scripts",
    "uc",
    "berkeley"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ray-lee/ucb-cspace-scripts.js.git"
  },
  "main": "lib/index.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "build": "cross-env BABEL_ENV=cjs babel ./src -d lib",
    "check": "npm run lint && npm run test && npm run coverage",
    "clean": "rimraf lib coverage",
    "coverage": "istanbul report --root coverage text && istanbul report --root coverage lcov",
    "lint": "eslint *.js src test",
    "prepublish": "npm run clean && npm run build",
    "test": "cross-env NODE_ENV=test nyc mocha --compilers js:babel-register --recursive test"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.1",
    "babel-plugin-istanbul": "^1.0.3",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.11.6",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^2.11.12",
    "cross-env": "^5.0.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.7.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "cspace-api": "^0.0.6"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "json"
    ],
    "report-dir": "./coverage/Node.js",
    "sourceMap": false,
    "instrument": false,
    "cache": true
  }
}
